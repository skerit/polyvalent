{
  "schemaVersion": 1,
  "id": "polyvalent",
  "version": "${version}",

  "name": "Polyvalent",
  "description": "The Blackblock.rocks PolyMC companion mod",
  "authors": [
    "Jelle De Loecker"
  ],
  "contact": {
    "homepage": "https://blackblock.rocks/",
    "sources": "https://github.com/skerit/polyvalent"
  },

  "license": "LGPLv3",
  "icon": "assets/polyvalent/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "rocks.blackblock.polyvalent.Polyvalent"
    ],
    "client": [
      "rocks.blackblock.polyvalent.PolyvalentClient"
    ],
    "server": [
      "rocks.blackblock.polyvalent.PolyvalentServer"
    ],
    "jei_mod_plugin": [
      "rocks.blackblock.polyvalent.compat.JeiCompatibility"
    ],
    "rei_client": [
      "rocks.blackblock.polyvalent.compat.ReiCompatibility"
    ],
    "polymc": [
      "rocks.blackblock.polyvalent.polymc.PolyMcCompatibility"
    ]
  },
  "mixins": [
    "polyvalent.mixins.json"
  ],
  "accessWidener": "polyvalent.accesswidener",

  "depends": {
    "fabricloader": ">=0.14.3",
    "fabric": "*",
    "minecraft": "1.19.x",
    "java": ">=17"
  },
  "suggests": {

  },
  "custom": {
    "modmenu": {
      "badges": [ "library" ]
    },
    "waila:plugins": {
      "id": "polyvalent:main",
      "initializer": "rocks.blackblock.polyvalent.compat.WthitCompatibility"
    }
  }
}
